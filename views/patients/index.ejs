<html>
	<head>
		<% include ../partials/head %>
	</head>
	<body>
		<% include ../partials/side_nav %>
		<% include ../partials/header %>
		<div class="container">
			<div class="main-wrapper col-sm-8 col-xs-10 col-xs-push-1">
				<% include ../shared/flashes %>
				<h1 class="pg-title">Patients</h1>
				<div class="button-group">
					<a href="patients/new"><button class="btn btn-primary">Create</button></a>
				</div>
				<div class="table-responsive fixed-height">
					<table class="table table-hover">
						<thead>
							<th>#</th>
							<th>Name</th>
							<th>DOB</th>
							<th>Gender</th>
							<th>Created At</th>
							<th></th>
						</thead>
						<tbody>					
							<% for(var i = 0; i < patients.length; i++) { %>
								<tr>
									<td>
										<%= i+1	 %>
									</td>
									<td>
										<a href="/patients/<%= patients[i]._id %>"><%= patients[i].fullName() %></a>
									</td>
									<td>
										<%= patients[i].dobHumanized() %>
									</td>
									<td>
										<%= patients[i].gender %>
									</td>
									<td>
										<%= patients[i].createdAtHumanized() %>
									</td>
									<td>
										<a href="/patients/<%= patients[i]._id %>"><button class="btn btn-primary btn-xs">View</button></a>
										<a href="/patients/<%= patients[i]._id %>/edit"><button class="btn btn-primary btn-xs">Edit</button></a>
										<form class="patient-actions" method="post">
											<input type="hidden" name="id" value="<%= patients[i]._id %>">
											<button class="btn btn-danger btn-xs submit" onclick="return confirm('Are you sure?')">Delete</button>
										</form>
									</td>
								</tr>
							<% } %>
						</tbody>
					</table>
				</div>
				<footer>
					<% include ../partials/footer %>
				</footer>
			</div>
		</div>
	</body>
</html>