<html>
	<head>
		<% include ../partials/head %>
	</head>
	<body>
		<header>
			<% include ../partials/header %>
		</header>
		<div class="container main-wrapper">
			<h1 class="pg-title">Patients</h1>
			<div class="button-group">
				<a href="patients/new"><button class="btn btn-primary">Create</button></a>
			</div>
			<div class="table-responsive">
				<table class="table table-hover">
					<thead>
						<th>#</th>
						<th>Name</th>
						<th>DOB</th>
						<th>Gender</th>
						<th>Created At</th>
						<th></th>
					</thead>
					<tbody>					
						<% for(var i = 0; i < patients.length; i++) { %>
							<tr>
								<td>
									<%= i+1	 %>
								</td>
								<td>
									<%= patients[i].full_name() %>
								</td>
								<td>
									<%= patients[i].dob_humanized() %>
								</td>
								<td>
									<%= patients[i].gender %>
								</td>
								<td>
									<%= patients[i].created_at_humanized() %>
								</td>
								<td>
									<a href="/patients/<%= patients[i]._id %>"><button class="btn btn-primary btn-xs">View</button></a>
									<form class="patient-actions" method="post">
										<input type="hidden" name="id" value="<%= patients[i]._id %>">
										<button class="btn btn-danger btn-xs submit">Delete</button>
									</form>
								</td>
							</tr>
						<% } %>
					</tbody>
				</table>
			</div>
		<footer>
			<% include ../partials/footer %>
		</footer>
	</body>
</html>