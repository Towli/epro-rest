<html>
	<head>
		<% include ../partials/head %>
	</head>
	<body>
		<header>
			<% include ../partials/header %>
		</header>
		<div class="container">
			<% include ../partials/side_nav %>	
				<div class="main-wrapper col-xs-9 col-xs-push-1">
					<h1 class="pg-title">Create Patient</h1>
					<form class="form-primary" method="post">
						<div class="form-group">
							<label for="first_name">First name</label>
							<input type="text" class="form-control" name="first_name" id="first_name" placeholder="First name" required>
						</div>
						<div class="form-group">
							<label for="last_name">Last name</label>
							<input type="text" class="form-control" name="last_name" id="last_name" placeholder="Last name"required>
						</div>
						<div class="form-group">
							<label for="dob">Date of birth</label>
							<input type="date" class="form-control" name="dob" required>
						</div>
						<div class="form-group">
							<label for="phone">Phone</label>
							<input type="tel" class="form-control" name="phone" required>
						</div>
						<div class="form-group">
							<label for="email">Email</label>
							<input type="email" class="form-control" name="email" required>
						</div>
						<div class="form-group">
							<label class="radio-inline"><input type="radio" value="male" name="gender" required>Male</label>
							<label class="radio-inline"><input type="radio" value="female" name="gender" required>Female</label>
						</div>
						<div class="form-group">
							<label for="procedure">Procedure undertaken</label>
							<select name="procedure" class="form-control">
							<% for(var i = 0; i < procedures.length; i++) { %>
								<option value="<%= procedures[i]._id %>"><%= procedures[i].name %></option>
							<% } %>
							</select>
						</div>
						<button type="submit" class="btn btn-primary">Save</button>
					</form>
					<footer>
						<% include ../partials/footer %>
					</footer>
				</div>
			</div>
		</div>
	</body>
</html>