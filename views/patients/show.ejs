<html>
	<head>
		<% include ../partials/head %>
	</head>
	<body>
		<header>
			<% include ../partials/header %>
		</header>
		<div class="container">
			<% include ../partials/side_nav %>
			<div class="main-wrapper col-xs-9 col-xs-push-1">
				<% include ../shared/flashes %>
				<h1 class="pg-title">Profile</h1>

				<div class="panel panel-default">
				  <div class="panel-heading">
				  	<h3 class="panel-title">Details</h3>
				  </div>
				  <div class="panel-body">
					  <h3><%= patient.full_name() %></h3>
					  <p><strong>Date of Birth:</strong> <%= patient.dob_humanized() %></p>
					  <p>Age: <%= patient.age() %></p>
					  <p><strong>Gender:</strong> <%= patient.gender %></p>
					  <p><strong>Created at:</strong> <%= patient.created_at_humanized() %></p>
				  </div>
				</div>

				<div class="panel panel-default">
				  <div class="panel-heading">
				    <h3 class="panel-title">Contact</h3>
				  </div>
				  <div class="panel-body">
				  	<p><strong>Phone: </strong><%= patient.contact.phone %></p>
				    <p><strong>Email: </strong><%= patient.contact.email %></p>
				  </div>
				</div>

				<div class="panel panel-default">
			  		<div class="panel-heading">
		    			<h3 class="panel-title">Procedures undertaken</h3>
			  		</div>
			  		<div class="panel-body">
				    <%= patient.procedure.name %>
			  		</div>
				</div>

				<div class="panel panel-default">
				  	<div class="panel-heading">
					    <h3 class="panel-title">Generated Surveys</h3>
				  	</div>
				  	<div class="panel-body">
				  		<% if (survey !== null) { %>
				  			<a href="/mailer/<%= survey._id %>?id=<%=patient._id%>" class="btn btn-default btn-xs">Deliver Survey</a>
				  			<a href="/surveys/<%= survey._id %>" class="btn btn-default btn-xs">View Survey</a>
			  			<% } %>
			  		</div>
				</div>

				<div class="panel panel-default">
				  	<div class="panel-heading">
					    <h3 class="panel-title">PRO history</h3>
				  	</div>
				  	<div class="panel-body">
				  		<% if (survey !== null && survey.is_complete()) { %>
				  			<a href="/surveys/<%= survey._id %>/results" class="btn btn-primary btn-xs">View Survey Results</a>
				  			<a class="btn btn-primary btn-xs" id="csv">Dump CSV</a>
			  			<% } %>
			  		</div>
				</div>
			</div>
		</div>
		<footer>
			<% include ../partials/footer %>
		</footer>
	</body>
</html>