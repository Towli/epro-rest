<html>
	<head>
		<% include ../partials/head %>
	</head>
	<body>
		<header>
			<% include ../partials/header %>
		</header>
		<div class="container main-wrapper">
			<h1 class="pg-title">Profile</h1>

			<div class="panel panel-default">
			  <div class="panel-heading">
			  	<h3 class="panel-title">Details</h3>
			  </div>
			  <div class="panel-body">
			  <h3><%= patient.full_name() %></h3>
			  <p><strong>Date of Birth:</strong> <%= patient.dob_humanized() %></p>
			  <p><strong>Gender:</strong> <%= patient.gender %></p>
			  <p><strong>Created at:</strong> <%= patient.created_at_humanized() %></p>
			  </div>
			</div>

			<div class="panel panel-default">
			  <div class="panel-heading">
			    <h3 class="panel-title">Procedures undertaken</h3>
			  </div>
			  <div class="panel-body">
			    <%= patient.procedure.name %>
			  </div>
			</div>

			<div class="panel panel-default">
			  <div class="panel-heading">
			    <h3 class="panel-title">PRO history</h3>
			  </div>
			  <div class="panel-body">
			    -
		  	</div>
			</div>
		</div>
		<footer>
			<% include ../partials/footer %>
		</footer>
	</body>
</html>