<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <% include ../partials/side_nav %>
    <% include ../partials/header %>
    <div class="container">
      <div class="main-wrapper col-sm-8 col-xs-10 col-xs-push-1">
          <% include ../shared/flashes %>
          <h1 class="pg-title">Edit Patient</h1>
          <form class="form-primary" method="post">
            <div class="form-group">
              <label for="first_name">First name</label>
              <input type="text" class="form-control" name="first_name" id="first_name" value="<%= patient.first_name %>" required>
            </div>
            <div class="form-group">
              <label for="last_name">Last name</label>
              <input type="text" class="form-control" name="last_name" id="last_name" value="<%= patient.last_name %>"required>
            </div>
            <div class="form-group">
              <label for="dob">Date of birth</label>
              <input type="date" class="form-control" name="dob" value="<%= patient.dobFormFormat() %>" required>
            </div>
            <div class="form-group">
              <label for="phone">Phone</label>
              <input type="tel" class="form-control" name="phone" value="<%= patient.contact.phone %>" required>
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="email" value="<%= patient.contact.email %>" required>
            </div>
            <div class="form-group">
              <% if (patient.gender === "male") { %>
                <label class="radio-inline"><input type="radio" value="male" name="gender" checked required>Male</label>
                <label class="radio-inline"><input type="radio" value="female" name="gender" required>Female</label>
              <% } else { %>
                <label class="radio-inline"><input type="radio" value="male" name="gender" required>Male</label>
                <label class="radio-inline"><input type="radio" value="female" name="gender" checked required>Female</label>
              <% } %>
                
            </div>
            <div class="form-group">
              <label for="procedure">Procedure undertaken</label>
              <select name="procedure" class="form-control">
              <% for(var i = 0; i < procedures.length; i++) { %>
                <option value="<%= procedures[i]._id %>"><%= procedures[i].name %></option>
              <% } %>
              </select>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
          </form>
          <footer>
            <% include ../partials/footer %>
          </footer>
        </div>
      </div>
    </div>
  </body>
</html>