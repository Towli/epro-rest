<html>
	<head>
		<% include ../partials/head %>
	</head>
	<body>
		<header>
			<% include ../partials/header %>
		</header>
		<div class="container">
			<% include ../partials/side_nav %>	
			<div class="main-wrapper col-xs-9 col-xs-push-1">
				<h1 class="pg-title">Procedures</h1>
				<div class="table-responsive">
					<table class="table table-hover">
						<thead>
							<th>#</th>
							<th>Name</th>
							<th>Excerpt</th>
							<th>Department</th>
							<th></th>
						</thead>
						<tbody>					
							<% for(var i = 0; i < procedures.length; i++) { %>
								<tr>
									<td>
										<%= i+1	 %>
									</td>
									<td>
										<%= procedures[i].name %>
									</td>
									<td>
										<%= procedures[i].excerpt %>
									</td>
									<td>
										<%= procedures[i].department %>
									</td>
									</td>
									<td>
										<a href="/procedures/<%= procedures[i]._id %>/edit"><button class="btn btn-primary btn-xs">Edit</button></a>
									</td>
								</tr>
							<% } %>
						</tbody>
					</table>
				</div>
				<footer>
					<% include ../partials/footer %>
				</footer>
			</div>
		</div>
	</body>
</html>